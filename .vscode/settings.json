  "nxConsole.generateAiAgentRules": true,
  "nxConsole.projectViewingStyle": "tree",
  "cSpell.words": ["iiot", "lefthook", "orpc", "ultracite", "visionarai"],
  "typescript.tsdk": "node_modules/typescript/lib",
